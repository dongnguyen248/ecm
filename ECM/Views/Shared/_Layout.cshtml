<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="//cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="ecmheader">
            <div class="top-left">
                <h1 class="logo">
                    <img src="~/Content/img/posco-the-great-logo.png" alt="With Posco" />
                </h1>

                <a href="#" class="logo_sys">
                    <img src="~/Content/img/logo_ecm.png" alt="ECM" />
                </a>
                <div class="searchArea">
                   
                        <input type="text" name="keyword" id="keyword" placeholder="search....." />
                  

                    <input type="image" src="~/Content/img/btn_top_blue_src.png" class="btnSearch"/>
                </div>
            </div>
            <div class="top-right">
                <div class="username">Nguyen Van A</div>
                <div class="help"> <a href="#"> <img src="~/Content/img/ico_help01.png" /></a></div>
                <div class="logout"><a href="#"> <img src="~/Content/img/ico_help02.png" /></a></div>
            </div>
        </div>

    </div>
    <div class="wrapper">
        <div class="ecmcontent" id="ecmcontent">

            @RenderBody()
            <hr />

        </div>
    </div>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
